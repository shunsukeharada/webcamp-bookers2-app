<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-block btn-outline-secondary btn-sm mt-4" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
</div>