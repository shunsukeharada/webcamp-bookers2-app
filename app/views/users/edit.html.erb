
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with model:@user, url:user_path(@user), local:true do |f| %>
  <div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
  <label>Image</label>
  <%= f.attachment_field :profile_image, class: "form-control-file" %>
  </div>
  <div class="form-group">
  <label>Introduction</label>
  <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
  <%= f.submit 'Update User', class: "btn btn-secondary" %>
  </div>
<% end %>

</div>
</div>

      </div>