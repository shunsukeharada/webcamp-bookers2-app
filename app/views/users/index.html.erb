
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list' %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag @book, :profile_image, size: '40x40', format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= book.user.name %>
      </td>
      <td>
        <%= link_to 'Show', user_path(book.user) %>
      </td>
    </tr>
       <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>