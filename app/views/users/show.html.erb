<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render partial: 'users/list', locals: {current_user: @user} %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <a href="/users/<%= @user.id %>"><%= attachment_image_tag book.user, :profile_image, size: '40x40', format: 'jpeg', fallback: "no_image.jpg" %></a>
      </td>
      <td>
        <p><%= link_to book.title, book_path(book) %></p>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
         <% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book), method: :delete do %>
        <i class="fas fa-heart"></i><%= book.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book), method: :post do %>
        <i class="far fa-heart"></i><%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>
      </td>
      <td>
        <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
      </td>
    </tr>
       <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>