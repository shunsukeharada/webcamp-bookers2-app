<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "user_info", user: @user %>
      <%= render "books/new_book", new_book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <%= render "books/index", books: @books %>
      </table>
      <h2>7日間分の投稿数</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @books.created_days_ago(6).count %></td>
            <td><%= @books.created_days_ago(5).count %></td>
            <td><%= @books.created_days_ago(4).count %></td>
            <td><%= @books.created_days_ago(3).count %></td>
            <td><%= @books.created_days_ago(2).count %></td>
            <td><%= @books.created_days_ago(1).count %></td>
            <td><%= @books.created_days_ago(0).count %></td>
          </tr>
        </tbody>
      </table>
      <canvas id="myChart"></canvas>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
      var ctx = document.getElementById('myChart');
      var myChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: ['6日前', '5日前', '4日前','3日前', '2日前', '1日前', '今日'],
              datasets: [{
                  label: '投稿した本の数',
                  data: <%= @books.past_week_count %>,
                  borderColor: "rgba(0,0,255,1)",
                  backgroundColor: "rgba(0,0,0,0)",
                  lineTension: 0.3
              }]
          },
          options: {
              scales: {
                  y: {
                      beginAtZero: true,
                      max: 10
                  }
              },
              plugins: {
                title: {
                    display: true,
                    text: '7日間の投稿数の比較'
                }
              }
          }
      });
      </script>
    </div>
  </div>
</div>
