<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%= form_with model:@book, url:book_path(@book), local:true do |f| %>
  <div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <label>Opinion</label>
  <%= f.text_area :body, class: "form-control introduction" %>
  </div>
  <div class="form-group">
  <%= f.submit 'Update Book', class: "btn btn-success" %>
  </div>
<% end %>

  		<a class="book_1844" href="/books/<%= @book.id %>">Show</a> |
  		<a class="back" href="/books">Back</a>
  </div>
</div>
      </div>