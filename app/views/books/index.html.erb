<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    

<%= render 'books/list' %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <a href="/"><img class="attachment user profile_image fallback" src="/no_image.jpg"></a>
      </td>
      <td>
        <p><%= link_to book.title, book_path(book) %></p>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
       <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>